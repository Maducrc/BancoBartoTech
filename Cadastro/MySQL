create database incentivams;
use incentivams;

create table cadastro_aluno (
id_aluno int not null auto_increment primary key,
nome_aluno varchar (100)not null,
email_aluno varchar (100) unique not null,
telefone_aluno varchar (13) unique not null,
senha varchar (10) not null,
data_cadastro timestamp default current_timestamp
);

create table questionario (
id_questionario int not null auto_increment primary key,
id_aluno int,
nome_aluno varchar (100) not null,
pergunta1 tinyint default 1 not null,
pergunta2 tinyint default 0 not null,
data_resposta timestamp default current_timestamp,

foreign key (id_aluno) references cadastro_aluno(id_aluno)
);

select*from cadastro_aluno;
select*from questionario;
